<html>
<h1>Employee Management Page</h1>
<h3>Add New Employees:</h3>
<form id="addEmp" action="/employees" method="post">
    First name: <input type="text" name="fname">
    Last name: <input type="text" name="lname">
    Pay: <input type="text" name="pay">
    Hours: <input type="text" name="hours"><input type="submit" value="Add New Employees">
 </form>
<br/>

<form id='search_employees' action='' method=''>
    <label> Search employees for by ID:</label>
    <input id='emp_search' type='text' name='emp_search' value=''>
    <input type="button" value="Search" onclick="searchEmps()">
</form>

<h3>Customer List:</h3>
<table>
    <thead> 
        <th>Employee ID</th>
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Pay</th>
        <th>Hours</th>
    </thead> 
    <tbody>
        {{#each empPlural}} 
        <tr>
            <td>{{emp_id}}</td> 
            <td>{{fname}}</td> 
            <td>{{lname}}</td>
            <td>{{pay}}</td> 
            <td>{{hours}}</td>            
            <td><button onclick="deleteCust({{id}})">Delete</button></td>
            <td><a href="/customers/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
